<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/clr_black_effective</item>
        <item name="android:textColor">@color/clr_black_effective</item>
        <item name="android:windowBackground">@color/clr_white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/clr_white</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/segui/seguisb_regular.ttf</item>
        <item name="android:lineSpacingExtra">@dimen/_2dp</item>
    </style>

    <style name="TextAppearance.Text.Regular.Light" parent="android:TextAppearance">
        <item name="fontPath">fonts/segui/seguisb_light.ttf</item>
        <item name="android:lineSpacingExtra">@dimen/_2dp</item>
    </style>

    <style name="TextAppearance.Text.SemiBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/segui/seguisb_semi.ttf</item>
        <item name="android:lineSpacingExtra">@dimen/_2dp</item>
    </style>

    <style name="TextAppearance.Text.Sprint" parent="android:TextAppearance">
        <item name="fontPath">fonts/segui/segui_print.ttf</item>
        <item name="android:lineSpacingExtra">@dimen/_2dp</item>
    </style>

    <style name="TextAppearance.Text.SemiItalic" parent="android:TextAppearance">
        <item name="fontPath">fonts/segui/segui_semi_italic.ttf</item>
        <item name="android:lineSpacingExtra">@dimen/_2dp</item>
    </style>

    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
        <item name="fontPath">fonts/segui/seguisb_bold.ttf</item>
        <item name="android:lineSpacingExtra">@dimen/_2dp</item>
    </style>

    <style name="TextAppearance.Text.Light" parent="android:TextAppearance">
        <item name="fontPath">fonts/segui/seguisb_regular.ttf</item>
        <item name="android:lineSpacingExtra">@dimen/_2dp</item>
    </style>

    <style name="TextAppearance.Text.Italic" parent="android:TextAppearance">
        <item name="fontPath">fonts/segui/seguisb_italic.ttf</item>
        <item name="android:lineSpacingExtra">@dimen/_2dp</item>
    </style>

    <style name="TextAppearance.Text.ItalicLight" parent="android:TextAppearance">
        <item name="fontPath">fonts/segui/seguisb_light_italic.ttf</item>
        <item name="android:lineSpacingExtra">@dimen/_2dp</item>
    </style>

    <style name="TextNormalWhite" parent="TextAppearance.Text.Regular">
        <item name="android:textColor">@color/clr_white</item>
        <item name="android:textSize">@dimen/normal_size</item>
    </style>

    <style name="TextNormalWhiteLight" parent="TextAppearance.Text.Regular.Light">
        <item name="android:textColor">@color/clr_white</item>
        <item name="android:textSize">@dimen/normal_size</item>
    </style>

    <style name="TextNormalWhiteSemiBold" parent="TextAppearance.Text.SemiBold">
        <item name="android:textColor">@color/clr_white</item>
        <item name="android:textSize">@dimen/normal_size</item>
    </style>

    <style name="TextNormalSemiBoldItalic" parent="TextAppearance.Text.SemiItalic">
        <item name="android:textColor">@color/clr_white</item>
        <item name="android:textSize">@dimen/normal_size</item>
    </style>

    <style name="TextNormalItalic" parent="TextAppearance.Text.Italic">
        <item name="android:textColor">@color/clr_black</item>
        <item name="android:textSize">@dimen/normal_size</item>
    </style>

    <style name="TextNormalItalicLight" parent="TextAppearance.Text.ItalicLight">
        <item name="android:textColor">@color/clr_text_black</item>
        <item name="android:textSize">@dimen/normal_size</item>
    </style>

    <style name="TextNormalMain" parent="TextNormalWhite">
        <item name="android:textColor">@color/clr_text_black</item>
    </style>

    <style name="TextNormalMainLight" parent="TextNormalWhiteLight">
        <item name="android:textColor">@color/clr_text_black</item>
    </style>

    <style name="TextNormalMainSemiBold" parent="TextNormalWhiteSemiBold">
        <item name="android:textColor">@color/clr_text_black</item>
    </style>

    <style name="TextNormalMainBold" parent="TextAppearance.Text.Bold">
        <item name="android:textColor">@color/clr_text_black</item>
        <item name="android:textSize">@dimen/normal_size</item>
    </style>

    <style name="TextNormalGraySmall">
        <item name="android:textColor">@color/clr_text_light_gray</item>
        <item name="android:textSize">@dimen/_10sp</item>
    </style>

    <style name="TextNormalSubMain" parent="TextNormalWhite">
        <item name="android:textColor">@color/clr_text_sub_main</item>
    </style>

    <style name="TextNormalSubMainLight" parent="TextNormalWhiteLight">
        <item name="android:textColor">@color/clr_text_sub_main</item>
    </style>

    <style name="TextSmallSubMain" parent="TextNormalWhite">
        <item name="android:textColor">@color/clr_text_sub_main</item>
        <item name="android:textSize">@dimen/small_size</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    //splashscreen
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

</resources>
